<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yash.first1.Rules"
    android:background="#3bcfad"
    android:configChanges="orientation"
    android:screenOrientation="portrait">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Rules for the Game"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#858fff"
        android:textIsSelectable="false"
        android:typeface="normal" />





    <ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="58dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView6"


        android:text="\n\n* Number of Players required: 2\n\n*  Player 1 starts the game and checks as many no. of boxes he/she wants to(atleast 1) STRICTLY in one row. Player cannot do multiple checks in different rows.\n\n*   After player 1 completes doing the checks(as many as he likes(in a row) then player 2 gets the chance(after pressing the CHANGE PLAYER button) and has to do the same.\n\n*   This process is repeated till there is 1 box left unchecked\n\n*  The player who gets the last box to check loses i.e the one who checks the last but one box wins the game\n\nNOTE:Game is completely fair.And yeah getting the first chance does not have any effect on chances of winning."
        android:textSize="14dp"
        android:textColor="#f8f8fb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nU r now all ready to GO...\nI am sure thet u will enjoy playing this game.\nHAVE FUNNnn :) "
            android:textAlignment="center"
            android:id="@+id/textView8"
            android:layout_below="@+id/scrollView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textColor="#858fff" />
</LinearLayout>

        </ScrollView>




</RelativeLayout>
